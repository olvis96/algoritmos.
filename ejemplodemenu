#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;


void main()
{
	int a,b,r,opcion;
	cout <<"ingrese a"<<endl; 
	cin>> a;
	cout <<"ingrese b"<<endl;
	cin >> b;
	do{
		cout <<"1.-Suma"<<endl;
	    cout <<"2.-Resta"<<endl;
		cout <<"3.-Producto"<<endl;
	    cout <<"2.-Division"<<endl;
		cout <<"o.- salir"<<endl;
		cout <<"elige una opcion:";
		cin >> opcion;
		switch (opcion)
		{
		case 1: r = a + b;
			break;

	    case 2: r = a - b;
			break;

	    case 3: r = a * b;
			break;

	    case 4: r = a / b;
			break;
        case 0: cout <<"salir";
			break;
		default: cout <<"opcion invalida" <<endl;
	
        }
		
 		cout << "El resultado es;" << r << endl;

	}
	while (opcion !=0);
	getch();
}
